{
    "layer": "top",
        //"height": 21,
        "spacing": 4,
        "modules-left": [
            "hyprland/workspaces"
        ],

        "modules-center": ["hyprland/window"],

        "modules-right": [
            "network", "bluetooth", "custom/wttr", "wireplumber", "backlight",
            "cpu", "memory", "battery", "battery#bat2", "hyprland/language",
            "clock", "tray"
        ],
        
        "hyprland/workspaces": {
            "all-outputs": "true"
        },

        "network": {
            // "interface": "wlp2*", // (Optional) To force the use of this interface
            "format-wifi": "{essid} ({signalStrength}%) ",
            //"format-ethernet": "{ipaddr}/{cidr} ",
            "tooltip-format": "{ifname} via {gwaddr} ",
            "format-linked": "{ifname} (No IP) ",
            "format-disconnected": "󰖪",
            "on-click": "foot -e nmtui"
        },

        "bluetooth": {
            "format": "",
            "format-connected": "{device_alias} ",
            "format-connected-battery": "{device_alias} {device_battery_percentage}% ",
            "on-click": "foot -e bluetoothctl"
        },

        "wireplumber": {
            "format": "{volume}% {icon}",
            "format-icons": {
                "headphone": "",
                "hands-free": "",
                "headset": "",
                "default": ["", "", ""]
            },
            "format-muted": "󰖁",
            "format-bluetooth": "{volume}% ",
            "format-bluetooth-muted": "󰂲",
            "on-click": "foot -e pulsemixer",
            "scroll-step": 1,
            "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 1%+",
            "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 1%-"
        },

        "backlight": {
            // "device": "acpi_video1",
            "format": "{percent}% {icon}",
            "format-icons": ["", ""]
        },

        "cpu": {
            "format": "{usage}% ",
            "tooltip": true,
            //"on-click": "foot --class floating -e btm"
            "on-click": "foot -e btm"
        },

        "memory": {
            "format": "{}% 󰍛",
            "on-click": "foot -e btm --default_widget_type processes --tree -e"
        },

        "battery": {
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 15
            },
            "format": "{capacity}% {icon}",
            "format-charging": "",
            "format-plugged": "",
            "format-alt": "{time} {icon}",
            "format-good": "{capacity}% {icon}", // An empty format will hide the module
            "format-full": "",
            "format-icons": ["", "", "", "", ""]
        },

        "battery#bat2": {
            "bat": "BAT0",
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 15
            },
            "format": "{capacity}% {icon}",
            "format-charging": "",
            "format-plugged": "",
            "format-alt": "{time} {icon}",
            "format-good": "{capacity}% {icon}", // An empty format will hide the module
            "format-full": "",
            "format-icons": ["", "", "", "", ""]
        },

        "hyprland/language": {
            "format": "{}",
            "format-en": "US",
            "format-ru": "RU"
        },

        "clock": {
            "tooltip-format": "<big>{:%d.%m.%Y}</big>\n<tt><small>{calendar}</small></tt>",
            "format-alt": "{:%d.%m.%Y}"
        },

        "tray": {
            // "icon-size": 21,
            "spacing": 10
        }
}
